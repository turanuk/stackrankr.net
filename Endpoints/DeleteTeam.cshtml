@* This really only changes the team's visibility *@

@{
  WebSecurity.RequireAuthenticatedUser();
  Response.AddHeader("Cache-Control", "no-cache");
  if (!IsPost) {
    Response.SetStatus(401);
  } else {
    var teamId = Request["TeamId"].AsInt();
    var db = Database.Open("stackRankR");
    //Pull the team
    var team = db.QuerySingle("SELECT OwnerId FROM Team WHERE Id = @0", teamId);

    //Check for ownership
    //TODO: Support multiple users of a single board
    if (team.OwnerId == WebSecurity.CurrentUserId) {
      db.Execute("UPDATE Team SET Display = @0 WHERE Id=@1", false, teamId);
      Response.SetStatus(200);
    } else {
      Response.SetStatus(401);
    }
  }
}